{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes" : [
            "warn", "single"
        ],
        "eqeqeq" : "warn",
        "no-multi-spaces" : "warn",
        "prefer-const": "warn",
        "semi" : "warn",
        "no-use-before-define" : "warn",
        "key-spacing": "warn"
    }
}
